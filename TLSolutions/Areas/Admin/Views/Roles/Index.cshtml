@model IEnumerable<TLSolutions.Entities.Identity.AppRole>

@{ ViewData["Title"] = "Index";
    Layout = "_Layout"; }

<h1>Roles</h1>

<p>
    <a href="/Admin/Roles/Create">Add New Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NormalizedName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.NormalizedName)
    </td>
    <td>
        <a class="btn btn-info btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a class="btn btn-info btn-sm" asp-action="RoleClaims" asp-route-id="@item.Id">Claims</a> |
        <a class="btn btn-primary btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </td>
</tr>
}
    </tbody>
</table>
